	<profiles>
		<!-- 具体配置见http://maven.apache.org/ref/2.2.1/maven-profile/profiles.html -->
		<!-- 可以使用类似命令激活相关属性 mvn -Pdev install 也可以配置相關激活策略 -->
		<profile>
			<!-- 开发属性 -->
			<id>dev</id>
			<!-- 激活策略 -->
			<activation>
				<!-- 操作系统为windows 7自动激活该配置 -->
				<os>
					<name>Windows 7</name>
				</os>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<!-- 本地jboss发布目录 -->
				<dir.tomcat.deploy>E:\softwork\apachetomcat6.0\webapps</dir.tomcat.deploy>
				<!-- 日志存放路径 -->
				<dir.log.root>E:\softwork\apachetomcat6.0\logs</dir.log.root>
			</properties>
			<build>
				<plugins>
					<!-- 打包定制 -->
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<outputDirectory>${dir.tomcat.deploy}</outputDirectory>
							<warName>lead</warName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!-- 生产属性 -->
			<id>prod</id>
			<activation>
				<os>
					<name>linux</name>
				</os>
				<!-- 默认激活 <activeByDefault>true</activeByDefault> -->
			</activation>
			<properties>
				<!-- 生产jboss发布目录 -->
				<dir.jboss.deploy>/opt/jboss/server/default/deploy
				</dir.jboss.deploy>
				<!-- 日志存放路径 -->
				<dir.log.root>/mnt/logs/pcore</dir.log.root>
			</properties>
			<build>
				<plugins>
					<!-- 打包定制 -->
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<outputDirectory>${dir.jboss.deploy}</outputDirectory>
							<warName>lead</warName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>



	<build>
		<plugins>
